<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/betreff"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        tools:text="@string/Page1" />

    <TextView
        android:id="@+id/anmeldungBetreff"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        tools:text="@string/Eingabe" />


    <EditText
        android:id="@+id/ediUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:text="@string/TextUser"
        android:textAllCaps="false"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/ediPass"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:text="@string/Pass"
        android:textAllCaps="false"
        android:textSize="26sp"/>

    <Button
        android:id="@+id/btnSpeichern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/Speicehrn"
        android:textAllCaps="false"
        android:textSize="26sp"/>

</LinearLayout>