<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:drawable/sym_action_email">

    <TextView
        android:id="@+id/anmeldungBetreff"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="Registrierung"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userEingabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Benutzername oder E-Mail-Adresse"/>

        <EditText
            android:id="@+id/ediUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="30"
            android:hint="Username" />

        <TextView
            android:id="@+id/passEingabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Kennwort"/>

        <EditText
            android:id="@+id/ediPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="30"
            android:hint="Password" />

        <Button
            android:id="@+id/next"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:layout_below="@+id/editText5"
            android:layout_alignEnd="@+id/editText5"
            android:enabled="true" />>

    </LinearLayout>

</LinearLayout>