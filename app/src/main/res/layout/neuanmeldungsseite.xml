<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
android:gravity="center"
android:background="@drawable/bg">

    <TextView
        android:id="@+id/betreffNeuAnmeldung"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="Neue Anmeldung"/>

    <TextView
        android:id="@+id/NeuAnmeldungEingabe"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Geben Sie Ihre Benutzername und Kennwort neu ein"/>

    <EditText
        android:id="@+id/ediUserNeu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:text="neu Benutzername"/>

    <EditText
        android:id="@+id/ediPassNeu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:text="Neu Kennwort"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:text="Speichern"/>

</LinearLayout>