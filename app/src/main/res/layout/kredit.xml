<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageKredit"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:background="@drawable/bg2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#eee">

            <TextView
                android:id="@+id/Kreditvolumentext"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:text="Kreditvolumen"/>

            <EditText
                android:id="@+id/kreditbetrag"
                android:inputType="numberDecimal"
                android:layout_width="350dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:background="#fff"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/laufzeit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Kreditlaufzeit"/>

            <Spinner
                android:id="@+id/spinnerlaufzeit"
                style="?attr/spinnerDropDownItemStyle"
                android:layout_width="350dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:background="@drawable/gradient_spinner"
                android:ellipsize="marquee"
                android:entries="@array/kredit_arrays"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tilgungsformtext"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Tilgungsform"/>

            <Spinner
                android:id="@+id/tilgungsform"
                style="?attr/spinnerDropDownItemStyle"
                android:layout_width="350dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:background="@drawable/gradient_spinner"
                android:ellipsize="marquee"
                android:entries="@array/tilgungsarten_arrays"
                android:textSize="18sp" />


            <Button
                android:id="@+id/abschicken"

                android:layout_marginTop="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:text="Weiter"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#000"/>


        </LinearLayout>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="H채ufige Fragen: "/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="10dp"
            android:text="- Welche Sch채den deckt VRAJ-Versicehrung ab?
                        \n- Bei wem melde ich einen Schaden?
                        \n- Wie lange dauert die Bearbeitung eines Schadensfall?
                        \n- Was ist zu beachten, wenn ich als versicherte Person nicht der K채ufer des Handys bin?
                        \nDr체cken Sie auf Informationen um die Antworten zu schauen"/>
        <Button
            android:id="@+id/info"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Informationen"
            android:textAllCaps="false"
            android:textColor="#000"/>

    </LinearLayout>
</ScrollView>