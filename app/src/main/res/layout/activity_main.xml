<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/betreff"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:text="@string/page_name"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_marginTop="50dp"/>
                                                                                <!--Anmelden Button-->
    <Button android:id="@+id/btnAnmelden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anmelden"
        android:textAllCaps="false"
        android:textSize="26dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/betreff"
        android:layout_marginTop="250dp"/>
                                                                                <!--Schlissen Button-->
    <Button android:id="@+id/btnSchlissen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SchlieÃŸen"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:textSize="26dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/btnAnmelden"
        />
                                                                                <!--Fusszeile Button-->
    <Button android:id="@+id/btnFusszeile"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Kontakt"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnSchlissen"
        />
    </LinearLayout>